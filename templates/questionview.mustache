<div class="qflashcard-flipcontainer" id="qflashcard-flipcontainer-{{qaid}}">
    <div class="qflashcard-flipper d-flex flex-column">
        <div class="qtext qflashcard-question align-self-stretch">
            {{{questiontext}}}
        </div>
        <div class="ablock qflashcard-ablock align-self-stretch">
            <div class="answer">
                <div class="qanswer qflashcard-answer qflashcard-flipin">
                    {{{answer}}}
                </div>
            </div>
        </div>
    </div>
    <div class="row no-gutters mt-2">
        <a class="qflashcard-flipbutton btn btn-primary" id="qflashcard-flipbutton-{{qaid}}" onclick="$.qtype_flashcard_toggle_flipped({{qaid}})">
            {{fliptext}}
        </a>
    </div>
    <div class="row d-inline-flex no-gutters mt-3">
        <button class="qflashcard-iwasrightbutton btn btn-primary qflashcard-flipin mr-3" id="qflashcard-iwasrightbutton-{{qaid}}" onclick="$.qtype_flashcard_set_answer({{qaid}}, 1)">
            {{{iwasrighttext}}}
        </button>
        <button class="qflashcard-iwaswrongbutton btn btn-primary qflashcard-flipin" id="qflashcard-iwaswrongbutton-{{qaid}}" onclick="$.qtype_flashcard_set_answer({{qaid}}, 0)">
            {{{iwaswrongtext}}}
        </button>
    </div>
    <input type="hidden" id="qflashcard-question-answer-{{qaid}}" />
</div>
